{
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "doctrine/dbal": "^3.7",
        "doctrine/migrations": "^3.6",
        "doctrine/orm": "^2.16",
        "guzzlehttp/guzzle": "^7.8",
        "php-di/php-di": "^7.0",
        "psr/container": "^2.0",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.12",
        "slim/twig-view": "^3.3",
        "symfony/cache": "^6.3",
        "symfony/console": "^6.3",
        "symfony/twig-bridge": "^6.3",
        "symfony/webpack-encore-bundle": "^2.1",
        "twig/intl-extra": "^3.7",
        "twig/twig": "^3.7",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4"
    }
}
